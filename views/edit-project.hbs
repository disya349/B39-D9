<html>
    <head>
        <title>Edit My Project</title>
        <link rel="icon" type="image/x-icon" href="/assets/images/Logo.png">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>

    <body class="bg-warning">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <img src="assets/images/Logo.png" style="width: 60px" class="ms-5 me-5">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/add-project">Add Project</a>
                        </li>
                    </ul>
                
                    <a class="btn btn-outline-success me-5" href="/contact">Contact Me</a>
                </div>
            </div>
        </nav>
        
        <div>
            <div class="d-flex m-5 col justify-content-center">
                <form class="w-25" action="/edit-project/{{id}}" method="post">
                    <h2 class="text-center mb-5">Edit My Project</h2>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Project Name</label>
                        <input type="text" class="form-control" id="inputName" required placeholder="Input your name" name="inputName">
                    </div>

                    <div class="d-flex">
                        <div class="mb-3 me-1">
                            <label for="input-start-date" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="input-start-date" style="width: 145px;" name="startDate">
                        </div>

                        <div class="mb-3 ms-1">
                            <label for="input-end-date" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="input-end-date" style="width: 145px;" name="endDate">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="inputMessage" class="form-label">Description</label>
                        <textarea type="text" class="form-control" id="inputMessage" required placeholder="Write a message" style="height: 100px; resize: none" name="inputMessage"></textarea>
                    </div>

                    <label for="input-message" class="form-label">Technologies</label>
                    <div class="d-flex">
                        <div class="w-50">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="node-js" id="node-js">
                                <label class="form-check-label" for="node-js">Node Js</label>
                            </div>
                            
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="java" id="java">
                                <label class="form-check-label" for="java">Java</label>
                            </div>
                        </div>

                        <div>
                            <div class="form-check justify-content-end">
                                <input class="form-check-input" type="checkbox" value="react" id="react">
                                <label class="form-check-label" for="react">React Js</label>
                            </div>
                            
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="python" id="python">
                                <label class="form-check-label" for="python">Python</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="input-image" class="form-label">Upload Image</label>
                        <input class="form-control" type="file" id="input-image">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </div>
        </div>

        <script src="assets/js/blog.js"></script>
    </body>
</html>