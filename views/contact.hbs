<html>
    <head>
        <title>Form - Contact Me</title>
        <link rel="icon" type="image/x-icon" href="assets/images/Logo.png">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    
    <body class="bg-warning">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <img src="assets/images/Logo.png" style="width: 60px" class="ms-5 me-5">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/add-project">Add Project</a>
                        </li>
                    </ul>
                
                    <a class="btn btn-outline-success me-5" href="/contact">Contact Me</a>
                </div>
            </div>
        </nav>

        <div>
            <div class=" d-flex m-5 col justify-content-center">
                <form class="w-25">
                    <h2 class="text-center">Contact Form</h2>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="input-name" required placeholder="Input your name">
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="input-email" required placeholder="Input your email">
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="text" class="form-control" id="input-phone" required placeholder="Input your number phone">
                    </div>

                    <div class="mb-3">
                        <label for="subject">Subject</label>
                        <select class="form-select" id="input-subject">
                            <option selected>choose the subject</option>
                            <option value="frontend">Frontend</option>
                            <option value="backend">Backend</option>
                            <option value="fullstack">Fullstack</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea type="text" class="form-control" id="input-message" required placeholder="Write a message" style="height: 100px; resize: none"></textarea>
                    </div>

                    <button type="button" class="btn btn-primary" onclick="getData()">Submit</button>
                  </form>
            </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="assets/js/mailing.js"></script>
</html>
